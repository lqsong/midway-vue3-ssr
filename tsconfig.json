{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap":true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "pretty": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "typeRoots": [ "./typings", "./node_modules/@types"],
    "outDir": "dist",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./web/*"],
      "~src/*": ["./src/*"] 
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "test",
    "web"
  ]
}
